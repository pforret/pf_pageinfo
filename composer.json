{
    "name": "pforret/pf_pageinfo",
    "version": "2.0.0",
    "description": "retrieve content and metadata from any URL",
    "keywords": [
        "pforret",
        "pf_pageinfo"
    ],
    "homepage": "https://github.com/pforret/pf_pageinfo",
    "license": "MIT",
    "authors": [
        {
            "name": "Peter Forret",
            "email": "peter@forret.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "guzzlehttp/guzzle": "^6.5",
        "html2text/html2text": "^4.3",
        "pforret/pf_pageparser": "^1.2"
    },
    "require-dev": {
        "roave/security-advisories": "dev-master",
        "laravel/pint": "^1",
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Pforret\\PfPageinfo\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Pforret\\PfPageinfo\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
